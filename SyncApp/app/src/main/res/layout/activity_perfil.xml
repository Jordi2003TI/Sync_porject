<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil"
    android:background="@color/bg_turquesa">

    <androidx.cardview.widget.CardView
        android:id="@+id/appBarCv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/bg_turquesa">

        <LinearLayout
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrowBackIv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_back"
                android:theme="@style/vectorAssets">
            </ImageView>

            <ImageView
                android:layout_marginStart="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:src="@drawable/title_image_removebg">
            </ImageView>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        app:layout_constraintTop_toBottomOf="@id/appBarCv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="35sp"
        android:textStyle="bold"
        >
    </TextView>

    <ImageView
        android:id="@+id/ivFotoPerfilUser"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/user_icon_image"
        android:theme="@style/vectorAssets"
        android:layout_marginTop="10dp">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDescriptionUser"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/ivFotoPerfilUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="14dp"
        android:theme="@style/fondoCards"
        >

        <TextView
            android:id="@+id/tvDescriptionUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/descripction_user"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:ellipsize="end"
            style="@style/FileCard"
            >
        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvDescriptionUser"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="18dp"
        android:orientation="vertical"
        tools:listitem="@layout/elemento_crud">


    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>