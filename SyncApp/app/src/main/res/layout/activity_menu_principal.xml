<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalActivity"
    android:background="@color/bg_turquesa">

    <androidx.cardview.widget.CardView
        android:id="@+id/appBarCv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/bg_turquesa">

        <LinearLayout
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrowBackIv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_back">
            </ImageView>

            <ImageView
                android:layout_marginStart="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:src="@drawable/title_image_removebg">
            </ImageView>

            <ImageView
                android:id="@+id/ivPerfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/user_icon_image">
            </ImageView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBusquedaUser"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarCv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="20dp"
        >
        <SearchView
            android:id="@+id/svBusquedaUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gris_claro"
            >

        </SearchView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btFiltrosUser"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cvBusquedaUser"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:text="@string/filters">
    </Button>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTituloRecientes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/btFiltrosUser"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mostRecent"
            android:gravity="center"
            android:textSize="26sp"
            android:textStyle="bold"
            >
        </TextView>
    </androidx.cardview.widget.CardView>
<!--Solo se pone weigh 0 cuando es linear
app:layoutManager=""
usamos para que solo se vea en la vista el tools:listitem
-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecientes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@+id/cvTituloRecientes"
        app:layout_constraintBottom_toTopOf="@+id/menuBottomBar"
        android:orientation="vertical"
        tools:listitem="@layout/elemento_recycle_view">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:id="@+id/menuBottomBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/bg_turquesa">

        <LinearLayout
            android:id="@+id/menu_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/favorite_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/favorite_icon"
                app:tint="@color/azul_real"
                android:layout_marginEnd="36dp">
            </ImageView>

            <ImageView
                android:id="@+id/add_iv"
                android:layout_marginStart="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_icon"
                android:layout_marginEnd="36dp">
            </ImageView>

            <ImageView
                android:id="@+id/settings_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/settings_icon">
            </ImageView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
<!-- NavegationView
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvNavegation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_menu">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
-->

</androidx.constraintlayout.widget.ConstraintLayout>