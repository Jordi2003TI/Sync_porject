<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filtros"
    android:background="@color/bg_turquesa">
    <androidx.cardview.widget.CardView
        android:id="@+id/appBarCv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/bg_turquesa">

        <LinearLayout
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrowBackIv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_back"
                android:theme="@style/vectorAssets">
            </ImageView>

            <ImageView
                android:layout_marginStart="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:src="@drawable/title_image_removebg">
            </ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/user_icon_image"
                android:theme="@style/vectorAssets">
            </ImageView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/llStars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/full_star_icon"
                android:layout_weight="1">
            </ImageView>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/full_star_icon"
                android:layout_weight="1">
            </ImageView>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/full_star_icon"
                android:layout_weight="1">
            </ImageView>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/full_star_icon"
                android:layout_weight="1">
            </ImageView>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/full_star_icon"
                android:layout_weight="1">
            </ImageView>

        </LinearLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/svPuntuaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:valueFrom="1"
            android:valueTo="5"
            app:layout_constraintTop_toBottomOf="@+id/llStars"
            android:layout_marginTop="20dp">
        </com.google.android.material.slider.RangeSlider>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSpinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/svPuntuaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp">

            <Spinner
                android:id="@+id/SpinerAlfabetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/svPuntuaje"
                android:layout_marginTop="8dp"
                >
            </Spinner>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSpinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/cvSpinner1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp">

            <Spinner
                android:id="@+id/SpinerCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/svPuntuaje"
                android:layout_marginTop="8dp"
                >
            </Spinner>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btFiltrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cvSpinner2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            android:text="@string/filter"
            android:backgroundTint="@color/gris_oscuro">
        </Button>





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>