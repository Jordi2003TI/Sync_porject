<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity"
    android:background="@color/bg_turquesa">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tbApp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.jorlina.syncapp.Fragments.AppBarFragment"
        tools:layout="@layout/app_bar_fragment">
    </androidx.fragment.app.FragmentContainerView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="82dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="18dp"
        app:cardCornerRadius="16dp"
        android:theme="@style/fondoCards">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">


            <TextView
                android:id="@+id/tvTituloArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:text="Escribe el titulo de tu articulo"
                android:textColor="@color/black">

            </TextView>

            <EditText
                android:id="@+id/etTitleCreate"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:hint="Titulo"
                app:layout_constraintTop_toBottomOf="@+id/tvTituloArticulo"
                app:layout_constraintBottom_toTopOf="@+id/cvPostFile"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="12dp">

            </EditText>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPostFile"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@+id/etTitleCreate"
                app:layout_constraintBottom_toTopOf="@+id/tvEscribeDescripcion"
                android:layout_marginBottom="12dp"
                android:layout_marginVertical="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAddFile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:src="@drawable/add_file_icon"
                        android:theme="@style/vectorAssets"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/FileCard">

                    </ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvEscribeDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Escribe una descripcion paara tu articulo"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/cvPostFile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/cvAñadirDescrippcion">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAñadirDescrippcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvEscribeDescripcion"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toTopOf="@+id/clBotonCrear"
                android:theme="@style/fondoCardsSmall">

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:gravity="top|start"
                    android:hint="Esribe aqui la descripción"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical">

                </EditText>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBotonCrear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btCreatePost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREAR"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                </Button>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>